<ol class="breadcrumb">

  <li>
    <%= render partial: 'votes/new', locals: {votable: question} %>
  </li>

  <li>
    <a href="<%= question_path(question) %>">Answers <span class="badge"><%= question.answers.count %></span></a>
  </li>

    <div class="vote_header">
      <h3><%= link_to question.title, question_path(question) %></h3>
      <p>
        <%= link_to question.user.name, user_path(question.user) %><br>
        Created <%= human_friendly_date(question) %><br>
      </p>
    </div>

  <% if current_user == question.user %>
  <%= link_to 'Edit Question', edit_question_path(question) %><br>
<% end %>
<div>
  <% question.tags.each do |tag|%>
  <%= link_to tag.name, tag_path(tag), html_options = {class:"btn btn-primary btn-xs", role:"button"} %>
  <% end %>
</div>
</ol>









