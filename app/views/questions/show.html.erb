<%= render @question %>
<% if current_user %>
  <%= render '/answers/new' %>
<% end %>
<br>
Responses
<ul>
  <%= render @responses %>
</ul>
Answers
<ul>
  <% @answers.each do |answer| %>
    <li><%= answer.count_votes %> <%= render partial: 'votes/new', locals: {votable: answer} %></li>
    <li><%= answer.body %></li>
    <%= link_to "Add Response", new_question_answer_response_path(@question, answer) %>
        <ul>
        <% answer.responses.each do |response| %>
           <li><%= response.body %></li>
        <% end %>
        </ul>
  <% end %>
</ul>


