<%= render @question %>
<% if current_user %>
  <%= render '/answers/new' %>
<% end %>

Responses
<button type="button" href="<%= new_question_response_path(@question.id) %>" class="btn btn-default btn-xs">Add Response</button>
<ul>
  <% @question.responses.each do |response| %>
    <li><%= response.body %></li>
  <% end %>
</ul>
Answers
<ul>
  <% @question.answers.each do |answer| %>
    <li><%= answer.count_votes %> <%= render partial: 'votes/new', locals: {votable: answer} %></li>
    <li><%= answer.body %></li>
    <%= link_to "Add Response", new_question_answer_response_path(@question.id, answer.id) %>
        <ul>
        <% answer.responses.each do |response| %>
           <li><%= response.body %></li>
        <% end %>
        </ul>
  <% end %>
</ul>


